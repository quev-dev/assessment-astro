---
import { SEOMetadata } from 'astro-seo-metadata';
import Rerouter from '../components/Rerouter.jsx';
import '../sass/globals.scss';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <meta name='theme-color' content='#3a6ddc' />

    <SEOMetadata
      siteName='A&B Blogs'
      title='Page Not Found'
      description="A&B isn't just a social network. It's your social network. With over 100,000 blog posts, you'll find just about anything."
      image=''
      favicon='/favicon.ico'
      author='A&B'
      copyright='Â© 2023 A&B'
      type='website'
      canonicalUrl={Astro.url.toString()}
      astroSitemap={true}
      astroGenerator={true}
    />
  </head>
  <body class='bg-c-darker'>
    <main class='h-screen flex flex-col items-center justify-center text-c-lightest'>
      <header class='m-12 flex flex-col gap-2 bg-c-dark p-8 rounded-sm'>
        <p class='text-sm text-c-light'>Error 404: Page Not Found</p>
        <h2 class='text-3xl'>It's empty in here.</h2>
        <p>
          The page you're looking for isn't at this address - well, unless you were
          seeking out this error page.
        </p>
      </header>
      <aside>
        <a href='/'>
          <svg
            class='w-8 h-8'
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            fill='#ffffe8'
            viewBox='0 0 16 16'
          >
            <path
              d='M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z'
            ></path>
          </svg>
        </a>
      </aside>
      <Rerouter client:only />
    </main>
  </body>
</html>
